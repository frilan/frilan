{
  "name": "@frilan/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node build/server.js",
    "build": "tsc",
    "dev": "tsnd --no-notify --transpile-only src/server.ts",
    "typeorm": "tsnd ../../node_modules/typeorm/cli.js",
    "mig:gen": "npm run typeorm migration:generate -- -p -n",
    "mig:run": "npm run typeorm migration:run",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "class-validator": "^0.13.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "pg": "^8.5.1",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@types/koa": "^2.13.0",
    "@types/koa__cors": "^3.0.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "ts-node-dev": "^1.1.6"
  }
}
