{
  "name": "@frilan/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node build/main.js",
    "build": "tsc",
    "dev": "tsnd --no-notify --transpile-only src/main.ts",
    "typeorm": "tsnd ../../node_modules/typeorm/cli.js",
    "mig:gen": "npm run typeorm migration:generate -- -p -n",
    "mig:run": "npm run typeorm migration:run",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --config jest.config.json --runInBand",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@drdgvhbh/postgres-error-codes": "^0.0.6",
    "@koa/cors": "^3.1.0",
    "@types/pg": "^8.6.1",
    "basic-auth": "^2.0.1",
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "koa2-swagger-ui": "^5.1.0",
    "pg": "^8.5.1",
    "routing-controllers": "^0.9.0",
    "swagger-jsdoc": "^6.1.0"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/koa": "^2.13.0",
    "@types/koa__cors": "^3.0.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/swagger-jsdoc": "^6.0.0",
    "axios": "^0.21.1",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8"
  }
}
